<head>
    <link rel="stylesheet" href="/css/form.css">
</head>


<body style="background: url('../img/bg-forms/bg-forms-signup.jpg') center;
    background-size: cover;">
    <form action="/signup" method="POST" id="form">
        <div class="form">
            <h1>Sign Up</h1>
            <div class="group">
                <input type="text" name="fullname" id="fullname" required><span class="bar"></span>
                <label for="">Full Name</label>
            </div>
            <div class="group">
                <input type="text" name="username" id="username" required><span class="bar"></span>
                <label for="">User Name</label>
            </div>
            <div class="group">
                <input type="password" name="password" id="password" required><span class="bar"></span>
                <label for="">Password</label>
            </div>
            <button>Sign Up</button>
        </div>
    </form>
</body>